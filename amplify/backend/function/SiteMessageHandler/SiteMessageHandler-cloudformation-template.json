              "Fn::Join": [
                "",
                [
                  "arn:aws:dynamodb:",
                  {
                    "Ref": "AWS::Region"
                  },
                  ":",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":table/",
                  {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${apiweblocationGraphQLAPIIdOutput}:GetAtt:SiteConnectionTable:Name"
                    }
                  }
                ]
              ]
            },
            "API_WEBLOCATION_GRAPHQLAPIIDOUTPUT": {
              "Ref": "apiweblocationGraphQLAPIIdOutput"
            },
            "API_WEBLOCATION_CLIENTCONNECTIONTABLE_NAME": {
              "Fn::ImportValue": {
                "Fn::Sub": "${apiweblocationGraphQLAPIIdOutput}:GetAtt:ClientConnectionTable:Name"
              }
            },
            "API_WEBLOCATION_CLIENTCONNECTIONTABLE_ARN": {
              "Fn::Join": [
                "",
                [
                  "arn:aws:dynamodb:",
                  {
                    "Ref": "AWS::Region"
                  },
                  ":",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":table/",
                  {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${apiweblocationGraphQLAPIIdOutput}:GetAtt:ClientConnectionTable:Name"
                    }
                  }
                ]
              ]
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs18.x",
        "Layers": [
          {
            "Ref": "functionweblocationawssdkArn"
          },
          {
            "Ref": "functionweblocationconfigArn"
          }
        ],
        "Timeout": 25
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "weblocationLambdaRoleccb287a9",
            {
              "Fn::Join": [
                "",
                [
                  "weblocationLambdaRoleccb287a9",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "AmplifyResourcesPolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
